{
  "name": "sindescol",
  "version": "1.0.4",
  "description": "Sistema integral de gestión para sindicatos colombianos",
  "main": "desktop/main.js",
  "author": {
    "name": "Omar Santiago Salazar",
    "email": "ossy2607@gmail.com",
    "url": "https://github.com/tu-usuario"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OmarSsalazar/Sindescol.git"
  },
  "keywords": [
    "sindicato",
    "gestión",
    "colombia",
    "react",
    "express",
    "mysql"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm test",
    "build:backend:exe": "cd backend && npm run build:exe && node ..\\scripts\\copy-backend-exe.js",
    "pack": "npm run build:frontend && electron-builder --dir",
    "dist": "npm run build:frontend && npm run build:backend:exe && electron-builder",
    "dist:portable": "npm run build:frontend && npm run build:backend:exe && electron-builder --win portable",
    "test:all": ".\\run.ps1 test:all"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "nodemailer": "^8.0.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.7.7",
    "electron-builder": "^26.8.1",
    "esbuild": "^0.27.3",
    "ico": "^0.3.3",
    "pkg": "^5.8.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.sindescol.app",
    "productName": "SINDESCOL",
    "publish": {
      "provider": "github",
      "owner": "OmarSsalazar",
      "repo": "Sindescol"
    },
    "win": {
      "icon": "frontend/public/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SINDESCOL",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "files": [
      "desktop/**",
      "frontend/dist/**",
      "resources/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/backend.exe",
        "to": "backend.exe"
      },
      {
        "from": "resources/.env",
        "to": ".env"
      }
    ]
  }
}
