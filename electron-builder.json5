{
  // Configuración general
  appId: "com.sindescol.app",
  productName: "SINDESCOL",
  artifactName: "${productName}-${version}-${arch}.${ext}",
  
  // Directorios
  directories: {
    buildResources: "frontend/public",
    output: "dist"
  },
  
  // Configuración de Windows
  win: {
    icon: "frontend/public/icon.png",
    target: [
      {
        target: "nsis",
        arch: ["x64"]
      },
      {
        target: "portable",
        arch: ["x64"]
      }
    ]
  },
  
  // Configuración NSIS (instalador Windows) con nombre limpio
  nsis: {
    oneClick: false,
    allowToChangeInstallationDirectory: true,
    createDesktopShortcut: true,
    createStartMenuShortcut: true,
    shortcutName: "SINDESCOL",
    artifactName: "${productName}-${version}-${arch}.${ext}"
  },
  
  // Configuración Portable (ejecutable sin instalador)
  portable: {
    artifactName: "${productName}-${version}-portable.${ext}"
  },
  
  
  // Configuración de macOS (opcional)
  mac: {
    target: [
      "dmg",
      "zip"
    ],
    category: "public.app-category.business"
  },
  
  // Configuración de Linux (opcional)
  linux: {
    target: [
      "AppImage",
      "deb"
    ],
    category: "Office"
  },
  
  // Ficheros a incluir en el build
  files: [
    "desktop/**/*",
    "frontend/dist/**/*",
    "node_modules/**/*",
    "!node_modules/**/*.map"
  ],
  
  // Recursos extra (se copian a la carpeta resources/ en Windows)
  extraResources: [
    {
      "from": "resources/backend.exe",
      "to": "backend.exe"
    },
    {
      "from": "resources/.env",
      "to": ".env"
    }
  ],
  
  // Ficheros a excluir
  extraMetadata: {
    name: "sindescol"
  },
  
  // Publish configuration para auto-updates
  publish: {
    provider: "github",
    owner: "tu-usuario",
    repo: "sindescol",
    vPrefixedTagName: true
  }
}
